# 1. Function that asks for the user's name and greets them
def greet_user():
    name = input("What's your name? ")
    print(f"Hey, {name.capitalize()}!")
greet_user()


# 2. Function that returns the square of a number
def square(number):
    return number ** 2


# 3. Function that checks if a number is even
def is_even(number):
    if number % 2 == 0:
        return True
    else:
        return False


# 4. Function that sums all numbers in a list
def sum_list(numbers):
    total = 0
    for i in numbers:
        total += i
    return total


# 5. Function that calculates the discounted price
def calculate_discount(price, discount_percent):
    discount = price * (discount_percent / 100)
    return price - discount


# 6. Function that counts vowels in a word
def count_vowels(word):
    vowels = "aeiou"
    count = 0
    for letter in word.lower():
        if letter in vowels:
            count += 1
    return count
